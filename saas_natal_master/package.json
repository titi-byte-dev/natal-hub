{
  "name": "contest-saas",
  "version": "1.0.0",
  "private": true,
  "description": "SaaS Platform for Contest Management and Voting",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "db:migrate": "cd packages/database && prisma migrate dev",
    "db:generate": "cd packages/database && prisma generate",
    "db:studio": "cd packages/database && prisma studio",
    "db:seed": "cd packages/database && tsx prisma/seed.ts",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@prisma/client": "^5.22.0",
    "prettier": "^3.0.3",
    "prisma": "^5.22.0",
    "turbo": "^1.10.16",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@nestjs/mapped-types": "^2.1.0",
    "browserslist": "^4.28.0",
    "caniuse-lite": "^1.0.30001756",
    "lodash": "^4.17.21"
  }
}
